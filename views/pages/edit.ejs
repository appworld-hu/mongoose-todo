<form action="" method="post">
    <div class="form-floating mb-3">
       <input type="text" class="form-control" id="title" name="title" placeholder="Title" 
       value="<%= typeof old !== 'undefined' ?  old.title: item.title %>">
       <label for="title">Teendő</label>
    </div>

    <div class="form-floating mb-3">
       <textarea style="height:200px" class="form-control" id="description" name="description" placeholder="Description"><%= typeof old !== 'undefined' ?  old.description: item.description %></textarea>
       <label for="description">Leírás</label>
    </div>
    
    <div class="form-floating mb-3">
       <input type="datetime-local" class="form-control" id="deadline" name="deadline" placeholder="Deadline" value="<%= typeof old !== 'undefined' ?  old.deadline: function(){
         let tmp_d = new Date(item.deadline); 
         let offset = (tmp_d.getTimezoneOffset() / 60) * (60*60*1000) ; 
         const date = new Date( tmp_d.getTime() - offset ).toISOString();
         const _d = date.split(':')
         return date.replace(`:${_d[ _d.length - 1 ]}`, '')
       }() %>">
       <label for="title">Határidő</label>
    </div>
    
    <div class="mt-3 text-center">
       <button class="btn btn-outline-success fixedwidth">Módosítás</button> <a class="btn btn-outline-danger fixedwidth" href="/">Mégsem</a>
    </div>
</form>
